<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="payment_acquirer_razerpay" model="payment.acquirer">
        <field name="provider">razerpay</field>
        <field name="name">Razerpay</field>
        <field name="company_id" ref="base.main_company"/>
        <field name="image_128" type="base64" file="payment_razerpay/static/description/icon.png"/>
        <field name="redirect_form_view_id" ref="razerpay_form"/>
        <field name="state">disabled</field>
        <field name="pre_msg"><![CDATA[
            <p>You will be prompted with razerpay Payment page for payment information.</p>]]>
        </field>
        <field name="razerpay_key_id">dummy</field>
        <field name="razerpay_key_secret">dummy</field>
        <field name="description" type="html">
            <p>
                Payment Gateway for India: Start Accepting Payments Instantly with razerpay's Free
                Payment Gateway. Supports Netbanking, Credit, Debit Cards, UPI etc.
            </p>
            <ul class="list-inline">
                <li class="list-inline-item"><i class="fa fa-check"/>Online Payment
                </li>
                <li class="list-inline-item"><i class="fa fa-check"/>Payment Status Tracking
                </li>
            </ul>
        </field>
    </record>
</odoo>
